
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="es-gt">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <style>
        html, body {
            position: absolute;
            height: 100%;
            width: 100%;
            margin: 0;
            padding: 0;
            background-image: url('img/fondo_login_2.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
        }

        #divContenedorLogin {
            position: relative;
            float: left;
            width: 100%;
            height: 100%;
            margin: 0px 0px 0px 0px;
            border: 0px;
            padding: 0px;
        }

        #divLogin {
            position: relative;
            width: 20%;
            height: 25%;
            margin-top: 20%;
            margin-bottom: 15%;
            margin-left: 40%;
            margin-right: 20%;
            border-style: solid;
            border-bottom-left-radius: 15px;
            border-bottom-right-radius: 15px;
            border-width: 1px;
            border-color: #706e6e;
        }

        #divLogo {
            position: relative;
            float: left;
            width: 100%;
            height: 30%;
            background-color: #ffffff;
            background-image: url('img/logo_diente.jpg');
            background-repeat: no-repeat;
            background-size: contain;
            background-position: left;
            border-bottom: solid;
        }

        #divControles {
            position: relative;
            float: left;
            width: 100%;
            height: 60%;
        }

        #divMensajeLogin {
            position: relative;
            float: left;
            width: 100%;
            height: 10%;
        }

        #tblLogin {
            position: relative;
            float: left;
            width: 100%;
            height: 100%;
        }

        .tr {
            position: relative;
            height: 5%;
            margin: 0;
            padding: 0;
        }

        #txtUsuario, #txtPassword {
            position: relative;
            float: left;
            width: 90%;
            height: 75%;
            text-align: left;
            font-size: larger;
            margin: 0px 0px 0px 0px;
            margin: 0;
            padding: 0;
        }

        #btnIngresar {
            width: 40%;
            height: 80%;
        }
    </style>
</head>
<body>
    <div id="divContenedorLogin">
        <div id="divLogin">
            <div id="divLogo">

            </div>
            <div id="divControles">
                <table id="tblLogin">
                    <tr class="tr">
                        <td class="td"><label>Usuario:</label></td>
                        <td class="td"><input type="text" id="txtUsuario" name="txtUsuario" /></td>
                    </tr>
                    <tr class="tr">
                        <td class="td"><label>Contraseña:</label></td>
                        <td class="td"><input type="password" id="txtPassword" name="txtPassword" /></td>
                    </tr>
                    <tr class="tr">
                        <td class="td"></td>
                        <td class="td"><input type="submit" value="Ingresar" id="btnIngresar" name="btnIngresar" /></td>
                    </tr>
                </table>
            </div>
            <div id="divMensajeLogin">

            </div>
        </div>
    </div>
</body>
</html>
