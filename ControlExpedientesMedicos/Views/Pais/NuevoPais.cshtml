
@{
    ViewData["Title"] = "Paises";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<!DOCTYPE html>
<html lang="es-gt">
<head>
    <title>Paises</title>

    <style>
        #divContenidoPaises {
            position: relative;
            float: left;
            width: 100%;
            height: 100%;
            overflow-x: auto;
        }

        #diviTitulo {
            position: relative;
            float: left;
            width: 100%;
            height: 10%;
            text-align: center;
            margin: 0;
            color: #808080;
        }

        #tblContenido {
            width: 100%;
        }

        #btnAceptar {
            width: 125px;
            height: 40px;
        }

        #txtPais {
            width: 200px;
        }

        #cbMoneda {
            width: 200px;
        }
    </style>
</head>

<div id="divContenidoPaises">
    <div id="diviTitulo">
        <h1>Creacion de paises</h1>
    </div>
    <div id="divContenido">
        <form>
            <table id="tblContenido">
                <tr>
                    <td><label>Nombre pais:</label></td>
                    <td><input type="text" id="txtPais" name="txtPais" /></td>
                </tr>
                <tr>
                    <td><label>Moneda:</label></td>
                    <td>
                        <select id="cbMoneda" name="cbMoneda">
                            <option value="0">-- Selecione una opcion --</option>
                            <option value="1">Q - Quetzal</option>
                            <option value="2">$ - Dolar</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Descripcion:</td>
                    <td><textarea rows="4" cols="100" id="taPais" name="taPais"></textarea></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" id="btnAceptar" name="btnAceptar" value="Guardar" /></td>
                </tr>
            </table>
        </form>
    </div>
</div>
</html>





