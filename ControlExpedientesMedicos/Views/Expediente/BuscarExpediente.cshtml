                </tr>
            </table>
        </form>
        <hr />
        <form action="/Expediente/ModificarExpediente" method="get">
            <table id="tblExpediente">
                <thead>
                    <tr>
                        <th>Seleccion</th>
                        <th>Codigo expediente</th>
                        <th>Nombres de paciente</th>
                        <th>Apellidos de paciente</th>
