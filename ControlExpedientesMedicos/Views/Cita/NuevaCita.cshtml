
@{
    ViewData["Title"] = "Citas";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<style>
    #divContenidoCita {
        position: relative;
        float: left;
        width: 100%;
        height: 100%;
        //background-color:#808080;
        overflow-x: auto;
    }

    #diviTitulo {
        position: relative;
        float: left;
        width: 100%;
        height: 10%;
        //background-color:#000000;
        text-align: center;
        margin: 0;
        color: #808080;
        margin-bottom: 20px;
    }

    #tblContenido {
        width: 25%;
    }

    #btnAceptar {
        width: 125px;
        height: 40px;
    }

    .paciente {
        width: 200px;
    }

    .tdlabel {
        width: 200px;
    }

    .txtInput {
        width: 225px;
    }
</style>

<div id="divContenidoCita">
    <div id="diviTitulo">
        <h1>Creación de citas</h1>
    </div>
    <div id="divContenido">
        <form>
            <table id="tblContenido">
                <tr>
                    <td class="tdlabel"><label>Fecha cita:</label></td>
                    <td class="txtInput"><input type="date" id="dpFechaCita" name="dpFechaCita" class="paciente" /></td>
                </tr>
                <tr>
                    <td class="tdlabel"><label>Hora inicial:</label></td>
                    <td><input type="time" id="txtApellidosP" name="txtApellidosP" class="paciente" /></td>
                </tr>
                <tr>
                    <td class="tdlabel"><label>Hora final:</label></td>
                    <td><input type="time" id="txtDireccionP" name="txtDireccionP" class="paciente" /></td>
                </tr>
                <tr>
                    <td class="tdlabel"><label>Paciente:</label></td>
                    <td>
                        <select id="cbPaciente" name="cbPaciente" class="paciente">
                            <option value="0">-- Selecione una opcion --</option>
                            <option value="1">Paciente 1</option>
                            <option value="2">Paciente 2</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td class="tdlabel"><label>Descripcion:</label></td>
                    <td><input type="date" id="txtFecNacP" name="txtFecNacP" class="paciente" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" id="btnAceptar" name="btnAceptar" value="Guardar" /></td>
                </tr>
            </table>
        </form>
    </div>
</div>

