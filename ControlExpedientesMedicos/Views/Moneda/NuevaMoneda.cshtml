
@{
    ViewData["Title"] = "Monedas";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<!DOCTYPE html>
<html lang="es-gt">
<head>
    <meta charset="UTF-8" />
    <title>Monedas</title>

    <style>
        #divContenidoMoneda {
            position: relative;
            float: left;
            width: 100%;
            height: 100%;
            overflow-x: auto;
        }

        #diviTitulo {
            position: relative;
            float: left;
            width: 100%;
            height: 10%;
            text-align: center;
            margin: 0;
            color: #808080;
        }

        #tblContenido {
            width: 30%;
        }

        #btnAceptar {
            width: 125px;
            height: 40px;
        }

        #txtMoneda {
            width: 200px;
        }
    </style>
</head>

<div id="divContenidoMoneda">
    <div id="diviTitulo">
        <h1>Creacion de monedas</h1>
    </div>
    <div id="divContenido">
        <form>
            <table id="tblContenido">
                <tr>
                    <td><label>Nombre moneda:</label></td>
                    <td><input type="text" id="txtMoneda" name="txtMoneda" /></td>
                </tr>
                <tr>
                    <td><label>Simbolo:</label></td>
                    <td>
                        <select id="cbMoneda" name="cbMoneda">
                            <option value="0">-- Selecione una opcion --</option>
                            <option value="1">QTZ(Q)</option>
                            <option value="2">USD($)</option>
                            <option value="2">EUR(€)</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" id="btnAceptar" name="btnAceptar" value="Guardar" /></td>
                </tr>
            </table>
        </form>
    </div>
</div>
</html>





