
@{
    ViewData["Title"] = "Pacientes";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<!DOCTYPE html>
<html lang="es-gt">
<head>
    <meta charset="UTF-8" />
    <title>Pacientes</title>

    <style>
        #divContenidoPaciente {
            position: relative;
            float: left;
            width: 100%;
            height: 100%;
            overflow-x: auto;
        }

        #diviTitulo {
            position: relative;
            float: left;
            width: 100%;
            height: 10%;
            text-align: center;
            margin: 0;
            color: #808080;
            margin-bottom: 20px;
        }

        #tblContenido {
            width: 100%;
        }

        #btnAceptar {
            width: 125px;
            height: 40px;
        }

        .paciente {
            width: 200px;
        }

        .tdlabel {
            width: 200px;
        }

        .txtInput {
            width: 225px;
        }
    </style>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.11.4/sweetalert2.all.js'></script>
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <script>
        var mensaje = '@ViewData["mensaje"].ToString()';

        if (mensaje == "OK") {
                $(document).ready(function () {
                    swal('MENSAJE', 'El empleado fue creado con exito', 'success');
                });
        }
        if (mensaje == "ERROR") {
            $(document).ready(function () {
                swal('ERROR', 'Ocurrio un error al guardar los datos del empleado', 'error');
            });
        }
        if (mensaje == "VACIO") {
            $(document).ready(function () {
                swal('ADVERTENCIA', 'Debe llenar todos los campos del formulario!', 'warning');
            });
        }
        if (mensaje == "EXCEPTION") {
            $(document).ready(function () {
                swal('ADVERTENCIA', 'Ocurrio una excepcion al tratar de guardar la informacion del empleado.', 'warning');
            });
        }
    </script>
</head>

<div id="divContenidoPaciente">
    <div id="diviTitulo">
        <h1>Creación de pacientes</h1>
    </div>
    <div id="divContenido">
        <form action="/Paciente/NuevoPaciente" method="post">
            <table id="tblContenido">
                <tr>
                    <td class="tdlabel"><label>Nombres del paciente:</label></td>
                    <td class="txtInput"><input type="text" id="txtNombresP" name="txtNombresP" class="paciente" required autofocus /></td>
                    <td>@*<label>Fotografía:</label>*@</td>
                </tr>
                <tr>
                    <td class="tdlabel"><label>Apellidos del paciente:</label></td>
                    <td><input type="text" id="txtApellidosP" name="txtApellidosP" class="paciente" required /></td>
                    <td>@*<input type="file" id="fFotoP" name="fFotoP" accept="image/png, image/jpeg" />*@</td>
                </tr>
                <tr>
                    <td class="tdlabel"><label>Dirección:</label></td>
                    <td><input type="text" id="txtDireccionP" name="txtDireccionP" class="paciente" required /></td>
                    <td></td>
                </tr>
                <tr>
                    <td class="tdlabel"><label>No. teléfono:</label></td>
                    <td><input type="tel" id="txtTelefonoP" name="txtTelefonoP" class="paciente" required /></td>
                    <td></td>
                </tr>
                <tr>
                    <td class="tdlabel"><label>Fecha de nacimiento:</label></td>
                    <td><input type="date" id="txtFecNacP" name="txtFecNacP" class="paciente" required /></td>
                    <td></td>
                </tr>
                <tr>
                    <td class="tdlabel"><label>No. Seguro social:</label></td>
                    <td><input type="text" id="txtSeguroSocial" name="txtSeguroSocial" class="paciente" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td class="tdlabel"><label>Genero:</label></td>
                    <td>
                        <select id="cbGenero" name="cbGenero" class="paciente" required>
                            <option value="">-- Selecione una opcion --</option>
                            <option value="M">Masculino</option>
                            <option value="F">Femenino</option>
                        </select>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td class="tdlabel"><label>Correo electrónico:</label></td>
                    <td><input type="text" id="txtEmailP" name="txtEmailP" class="paciente" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td class="tdlabel"></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" id="btnAceptar" name="btnAceptar" value="Guardar" /></td>
                    <td></td>
                </tr>
            </table>
        </form>
    </div>
</div>
</html>




